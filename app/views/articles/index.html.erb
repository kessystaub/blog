<div class="container">
  <h1>Articles</h1>

  <div id="articles">
    <%= link_to "New Article", new_article_path, class: "btn btn-success", role: "button" %>

    <br>
    <br>
    Our blog has <%= Article.public_count %> articles and counting!
    <br>
    <br>
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @articles.each do |article| %>
        <div class="col">
          <div class="card" style="height: 25rem;">
            <div class="card-body"> 
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-subtitle mb-3"><small class="text-muted">Last updated <%= article.updated_at %></small></p>
              <p class="card-text"><%= article.body %></p>
            </div>
            <div class="card-footer">
                <%= link_to "Read more>", article %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


